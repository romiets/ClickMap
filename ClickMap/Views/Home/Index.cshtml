@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
    <div>
        <input type="button" value="Next Event" onclick="LoadMap.counter++; RequestMap();" />
    </div>
    <div id="dvMap" style="width: 500px; height: 500px">
    </div>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDw4n7mLJYn1tQ-zI_U4xbd3biZrE4cpMw"></script>
    <script type="text/javascript">

        var map;


        window.onload = function () {
            Initialize();
        }; 

        function Initialize()
        {
            LoadMap.counter = 0;
            
            RequestMap();
        }

        function RequestMap() {
                    var i = (LoadMap.counter % 2) + 1 ; //added to loop in data every click

                    $.ajax({
                        url: "/Home/GetEvent",
                        dataType: "json",
                    type: "GET", 
                    contentType: 'application/json; charset=utf-8', 
                    cache: false, 
                    data: { Id: i },
                    success: function (data) {
                        if (data.success) {

                            LoadMap(JSON.parse(data.message));
                        }
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
        }

        function LoadMap(markers) {
            var infoWindow = new google.maps.InfoWindow();
            var geocoder = new google.maps.Geocoder();
            var mapOptions = {
                center: new google.maps.LatLng(-33.92, 151.25),
                zoom: 8,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            var map = new google.maps.Map(document.getElementById("dvMap"), mapOptions);
            var data;
            var i = LoadMap.counter % 2;
            data = markers[0];

            geocoder.geocode({ 'address': data.FullAddress}, function (results, status)
            {
                if (status == google.maps.GeocoderStatus.OK)
                {
                    var marker = new google.maps.Marker({
                        position: results[0].geometry.location,
                        map: map,
                        title: data.FullAddress
                    });
                    (function (marker, data) {
                        google.maps.event.addListener(marker, "click", function (e) {
                            infoWindow.setContent(data.Name.concat(" - ", data.Date));
                            infoWindow.open(map, marker);
                        });
                    })(marker, data);
                }
            })
        }

    </script>
</body>
</html>